{
  "name": "publish-devto",
  "version": "1.0.0",
  "description": "GitHub Action to publish markdown files as articles on on dev.to platform, with assets hosted on GitHub.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/spencerlepine/publish-devto.git"
  },
  "private": true,
  "exports": "./dist/index.js",
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "build": "rm -rf dist && node scripts/build.js",
    "test": "xo",
    "commit:build": "git add dist && git commit -m \"chore: update build\" && git push",
    "tag": "git tag -d v2 && git push --delete origin v2 && git tag -a v2 -m 'v2' && git push --tags",
    "release": "npm run -s build && npm run -s commit:build && npm run -s tag"
  },
  "keywords": [
    "github",
    "actions",
    "dev.to",
    "publish",
    "markdown",
    "assets",
    "articles",
    "sync"
  ],
  "author": {
    "name": "Spencer Lepine",
    "url": "https://twitter.com/spencerlepine"
  },
  "homepage": "https://github.com/spencerlepine/publish-devto",
  "bugs": {
    "url": "https://github.com/spencerlepine/publish-devto/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.0.3",
    "@spencerlepine/devto-cli": "^1.2.0",
    "xo": "^0.54.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ],
    "rules": {
      "unicorn/prefer-top-level-await": "off"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true,
    "endOfLine": "auto"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "npm": ">=6.0.0"
  }
}